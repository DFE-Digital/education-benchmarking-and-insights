{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "AssetSrc/ts/**/*",
    "AssetSrc/ts/**/*.vue",
    "types/*.d.ts"
  ],
  "exclude": [
    "AssetSrc/ts/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./AssetSrc/ts/*"
      ]
    }
  }
}