@using Web.App.Extensions
@model Web.App.ViewModels.UserDefinedCharacteristicViewModel
@{
    var selected = bool.TrueString.Equals(ViewData.ModelState.GetAttemptedValueOrDefault(nameof(Model.FreeSchoolMeals), Model.FreeSchoolMeals), StringComparison.OrdinalIgnoreCase);
    var valueFrom = ViewData.ModelState.GetAttemptedValueOrDefault(nameof(Model.FreeSchoolMealsFrom), Model.FreeSchoolMealsFrom?.ToString());
    var valueTo = ViewData.ModelState.GetAttemptedValueOrDefault(nameof(Model.FreeSchoolMealsTo), Model.FreeSchoolMealsTo?.ToString());
    var hasError = ViewData.ModelState.HasError(nameof(Model.FreeSchoolMealsFrom)) || ViewData.ModelState.HasError(nameof(Model.FreeSchoolMealsTo));
    var errors = hasError
        ? (ViewData.ModelState[nameof(Model.FreeSchoolMealsFrom)]?.Errors ?? [])
        .Concat(ViewData.ModelState[nameof(Model.FreeSchoolMealsTo)]?.Errors ?? [])
        .Select(e => e.ErrorMessage)
        .ToArray()
        : [];
    var schoolName = ViewData["SchoolName"] as string;
    var freeSchoolMeals = ViewData["FreeSchoolMeals"] as decimal?;
}

<div class="govuk-checkboxes__item">
    <input class="govuk-checkboxes__input" id="@nameof(Model.FreeSchoolMeals)" name="@nameof(Model.FreeSchoolMeals)" type="checkbox" value="true" data-aria-controls="conditional-@nameof(Model.FreeSchoolMeals)" @(selected ? "checked" : "")>
    <label class="govuk-label govuk-checkboxes__label" for="@nameof(Model.FreeSchoolMeals)">
        Eligibility for free school meals (FSM)
    </label>
</div>
<div class="govuk-checkboxes__conditional govuk-checkboxes__conditional--hidden" id="conditional-@nameof(Model.FreeSchoolMeals)">
    <div class="govuk-form-group @(hasError ? "govuk-form-group--error" : string.Empty)">
        <fieldset class="govuk-fieldset">
            <div class="govuk-hint">
                @schoolName has <strong>@freeSchoolMeals.ToPercent()</strong> of pupils eligible for FSM
            </div>
            @if (hasError)
            {
                <p id="@nameof(Model.Code)-error" class="govuk-error-message">
                    <span class="govuk-visually-hidden">Error:</span>
                    @for (var i = 0; i < errors.Length; i++)
                    {
                        @errors[i]
                        if (i < errors.Length - 1)
                        {
                            <br/>
                        }
                    }
                </p>
            }
            <legend class="govuk-visually-hidden">Eligibility for free school meals (FSM)</legend>
            <div class="govuk-grid-column-one-quarter">
                <label class="govuk-label" for="@nameof(Model.FreeSchoolMealsFrom)">
                    From
                </label>
                <div class="govuk-input__wrapper">
                    <input class="govuk-input govuk-input--width-3 @(ViewData.ModelState.HasError(nameof(Model.FreeSchoolMealsFrom)) ? "govuk-input--error" : string.Empty)" id="@nameof(Model.FreeSchoolMealsFrom)" name="@nameof(Model.FreeSchoolMealsFrom)" type="text" value="@valueFrom">
                    <div class="govuk-input__suffix" aria-hidden="true">%</div>
                </div>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <label class="govuk-label" for="@nameof(Model.FreeSchoolMealsTo)">
                    To
                </label>
                <div class="govuk-input__wrapper">
                    <input class="govuk-input govuk-input--width-3 @(ViewData.ModelState.HasError(nameof(Model.FreeSchoolMealsTo)) ? "govuk-input--error" : string.Empty)" id="@nameof(Model.FreeSchoolMealsTo)" name="@nameof(Model.FreeSchoolMealsTo)" type="text" value="@valueTo">
                    <div class="govuk-input__suffix" aria-hidden="true">%</div>
                </div>
            </div>
        </fieldset>
    </div>
</div>