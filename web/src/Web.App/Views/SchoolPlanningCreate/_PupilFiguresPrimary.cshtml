@using Web.App.Extensions
@model Web.App.ViewModels.SchoolPlanCreateViewModel

@if (Model.PlanInput is { MixedAgeReceptionYear1: false })
{
    <div class="@(ViewData.ModelState.HasError(nameof(Model.PlanInput.PupilsReception)) ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
        <label class="govuk-label govuk-label--m" for="@nameof(Model.PlanInput.PupilsReception)">
            Pupil figures for reception
        </label>
        @if (ViewData.ModelState.HasError(nameof(Model.PlanInput.PupilsReception)))
        {
            <p id="@nameof(Model.PlanInput.PupilsReception)-error" class="govuk-error-message">
                <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(Model.PlanInput.PupilsReception)]?.Errors.First().ErrorMessage
            </p>
        }
        <input class="@(ViewData.ModelState.HasError(nameof(Model.PlanInput.PupilsReception)) ? "govuk-input govuk-input--width-5 govuk-input--error" : "govuk-input govuk-input--width-5")"
               id="@nameof(Model.PlanInput.PupilsReception)"
               name="@nameof(Model.PlanInput.PupilsReception)"
               type="number"
               spellcheck="false"
               value="@Model.PlanInput.PupilsReception">
    </div>
}

