@model Web.App.ViewModels.Components.SortableTableHeaderCellButtonViewModel

<th data-field="@Model.SortField" scope="col" class="govuk-table__header govuk-table__header--sortable @Model.ClassName"
    aria-sort="@Model.AriaSort">
    <button type="submit" class="govuk-body govuk-link govuk-link--no-underline govuk-!-font-weight-bold"
            name="@Model.SortKey" value="@Model.SortValue">
        @Model.Label
        @await Html.PartialAsync("Components/SortableTableHeaderCell/_Icon", Model.Sort)
    </button>
</th>