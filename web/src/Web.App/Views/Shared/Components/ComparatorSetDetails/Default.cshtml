@model Web.App.ViewModels.Components.ComparatorSetDetailsViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <details class="govuk-details">
            <summary class="govuk-details__summary">
                <span class="govuk-details__summary-text">
                    How we choose similar schools
                </span>
            </summary>
            <div class="govuk-details__text">
                <p class="govuk-body">We choose 30 similar schools based on: </p>
                <ul class="govuk-list govuk-list--bullet">
                    <li>school phase and type</li>
                    <li>London pay weighting</li>
                    <li>number of pupils</li>
                    <li>pupils eligible for free school meals (FSM)</li>
                    <li>building types and features</li>
                </ul>
                <p>Teacher contact ratio is not included.</p>
                <p>
                    <a href="#" class="govuk-link govuk-link--no-visited-state">View or change which schools we compare you with</a>
                </p>
            </div>
        </details>
    </div>
</div>