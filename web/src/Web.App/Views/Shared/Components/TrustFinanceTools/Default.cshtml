@model Web.App.ViewModels.Components.FinanceToolsViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-m">Finance tools</h2>
        <ul class="app-links">
            @foreach (var tool in Model.Tools)
            {
                switch (tool)
                {
                    case FinanceTools.CompareYourCosts:
                        <li>
                            <img src="/assets/images/compare-your-costs.png" alt="" class="app-view-component">
                            <h3 class="govuk-heading-s">
                                <a href="@Url.Action("Index", "TrustComparison", new { companyNumber = Model.Identifier })" class="govuk-link govuk-link--no-visited-state">Compare your costs</a>
                            </h3>
                            <p class="govuk-body">
                                Compare your trust schools costs.
                            </p>
                        </li>
                        break;
                    case FinanceTools.BenchmarkCensus:
                        <li>
                            <img src="/assets/images/benchmark-census.png" alt="" class="app-view-component">
                            <h3 class="govuk-heading-s">
                                <a href="@Url.Action("Index", "TrustCensus", new { companyNumber = Model.Identifier })" class="govuk-link govuk-link--no-visited-state">Benchmark pupil and workforce data</a>
                            </h3>
                            <p class="govuk-body">
                                Compare your trust schools pupil and workforce data.
                            </p>
                        </li>
                        break;
                    case FinanceTools.CentralServices:
                        <feature name="@(string.Join(",", FeatureFlags.UserDefinedComparators, FeatureFlags.Trusts))">
                            <li>
                                <img src="/assets/images/central-services.png" alt="" class="app-view-component">
                                <h3 class="govuk-heading-s">
                                    <a href="@Url.Action("Index", "TrustComparators", new { companyNumber = Model.Identifier })" class="govuk-link govuk-link--no-visited-state">Trust to trust comparison</a>
                                </h3>
                                <p class="govuk-body">
                                    Compare to other trusts to understand more about your priority costs.
                                </p>
                                <strong class="govuk-tag govuk-tag--grey">
                                    Requires login
                                </strong>
                            </li>
                        </feature>
                        break;
                    case FinanceTools.ForecastRisk:
                        <li>
                            <img src="/assets/images/forecast-risk.png" alt="" class="app-view-component">
                            <h3 class="govuk-heading-s">
                                <a href="" class="govuk-link govuk-link--no-visited-state">Forecast and risk</a>
                            </h3>
                            <p class="govuk-body">
                                Lorem ipsum.
                            </p>
                            <strong class="govuk-tag govuk-tag--grey">
                                Requires login
                            </strong>
                        </li>
                        break;
                    case FinanceTools.FinancialPlanning:
                        <li>
                            <img src="/assets/images/curriculum-financial-planning.png" alt="" class="app-view-component">
                            <h3 class="govuk-heading-s">
                                <a href="@Url.Action("Index", "TrustPlanning", new { companyNumber = Model.Identifier })" class="govuk-link govuk-link--no-visited-state">Curriculum and financial planning</a>
                            </h3>
                            <p class="govuk-body">
                                Measure expected curriculum spending and staffing structure.
                            </p>
                            <strong class="govuk-tag govuk-tag--grey">
                                Requires login
                            </strong>
                        </li>
                        break;
                }
            }
        </ul>
    </div>
</div>