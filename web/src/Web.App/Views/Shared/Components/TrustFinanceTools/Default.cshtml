@using Microsoft.FeatureManagement.Mvc.TagHelpers
@model Web.App.ViewModels.Components.FinanceToolsViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-m">Benchmarking and planning tools</h2>
        <ul class="app-links">
            @foreach (var tool in Model.Tools)
            {
                switch (tool)
                {
                    case FinanceTools.CompareYourCosts:
                        <li>
                            <a href="@Url.Action("Index", "TrustComparison", new { companyNumber = Model.Identifier })">
                                <img src="/assets/images/compare-your-costs.png" alt="" class="app-view-component">
                            </a>
                            <h3 class="govuk-heading-s">
                                <a href="@Url.Action("Index", "TrustComparison", new { companyNumber = Model.Identifier })" class="govuk-link govuk-link--no-visited-state">View school spending</a>
                            </h3>
                            <p class="govuk-body">
                                View the spending for schools in this trust.
                            </p>
                        </li>
                        break;
                    case FinanceTools.BenchmarkCensus:
                        <li>
                            <a href="@Url.Action("Index", "TrustCensus", new { companyNumber = Model.Identifier })">
                                <img src="/assets/images/benchmark-census.png" alt="" class="app-view-component">
                            </a>
                            <h3 class="govuk-heading-s">
                                <a href="@Url.Action("Index", "TrustCensus", new { companyNumber = Model.Identifier })" class="govuk-link govuk-link--no-visited-state">View pupil and workforce data</a>
                            </h3>
                            <p class="govuk-body">
                                View the pupil and workforce data for schools in this trust.
                            </p>
                        </li>
                        break;
                    case FinanceTools.CentralServices:
                        <feature name=@FeatureFlags.TrustComparison>
                            <li>
                                <a href="@Url.Action("Index", "TrustComparators", new { companyNumber = Model.Identifier })">
                                    <img src="/assets/images/central-services.png" alt="" class="app-view-component">
                                </a>
                                <h3 class="govuk-heading-s">
                                    <a href="@Url.Action("Index", "TrustComparators", new { companyNumber = Model.Identifier })" class="govuk-link govuk-link--no-visited-state">Trust to trust benchmarking</a>
                                </h3>
                                <p class="govuk-body">
                                    Benchmark against other trusts to understand more about priority costs.
                                </p>
                                <strong class="govuk-tag govuk-tag--grey">
                                    Requires login
                                </strong>
                            </li>
                        </feature>
                        break;
                    case FinanceTools.ForecastRisk:
                        <feature name="@FeatureFlags.ForecastRisk">
                            <li>
                                <a href="@Url.Action("Index", "TrustForecast", new { companyNumber = Model.Identifier })">
                                    <img src="/assets/images/forecast-risk.png" alt="" class="app-view-component">
                                </a>
                                <h3 class="govuk-heading-s">
                                    <a href="@Url.Action("Index", "TrustForecast", new { companyNumber = Model.Identifier })" class="govuk-link govuk-link--no-visited-state">Forecast and risk</a>
                                </h3>
                                <p class="govuk-body">
                                    View metrics and recommendations for the future financial position of this trust.
                                </p>
                                <strong class="govuk-tag govuk-tag--grey">
                                    Requires login
                                </strong>
                            </li>
                        </feature>
                        break;
                    case FinanceTools.FinancialPlanning:
                        <li>
                            <a href="@Url.Action("Index", "TrustPlanning", new { companyNumber = Model.Identifier })">
                                <img src="/assets/images/curriculum-financial-planning.png" alt="" class="app-view-component">
                            </a>
                            <h3 class="govuk-heading-s">
                                <a href="@Url.Action("Index", "TrustPlanning", new { companyNumber = Model.Identifier })" class="govuk-link govuk-link--no-visited-state">Curriculum and financial planning</a>
                            </h3>
                            <p class="govuk-body">
                                Measure expected curriculum spending and staffing structure.
                            </p>
                            <strong class="govuk-tag govuk-tag--grey">
                                Requires login
                            </strong>
                        </li>
                        break;
                }
            }
        </ul>
    </div>
</div>