@model Web.App.ViewModels.Components.LocalAuthorityHighNeedsNationalRankingsViewModel

<table class="govuk-table govuk-table--cell-pad">
    <caption class="govuk-table__caption govuk-visually-hidden">National ranking</caption>
    <thead class="govuk-table__head">
    <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header govuk-!-width-one-half" colspan="2">
            Local authority
        </th>
        <th scope="col" class="govuk-table__header govuk-!-width-one-half">
            Percentage of budget vs spend per head of 2 to 18 population
        </th>
    </tr>
    </thead>
    <tbody class="govuk-table__body">
    @foreach (var rank in Model.Closest)
    {
        <tr class="govuk-table__row@(rank.Code == Model.Code ? " govuk-table__row--highlight" : string.Empty)">
            <td class="govuk-table__cell govuk-table__cell--numeric">
                @($"{rank.Rank}.")
            </td>
            <td class="govuk-table__cell">
                @(rank.Name)
            </td>
            <td class="govuk-table__cell govuk-table__cell--numeric">
                @(rank.Value?.ToString("#.#"))%
            </td>
        </tr>
    }
    </tbody>
</table>