@model Web.App.ViewModels.Components.LocalAuthoritySchoolFilterSelectedItemsViewModelBase

@if (Model.SelectedFilters.Length > 0)
{
    <h3 class="govuk-heading-s">
        @Model.Heading
    </h3>
    <ul class="govuk-list">
        @foreach (var filter in Model.SelectedFilters)
        {
            var query = (Model.Query ?? string.Empty)
                .Replace($"{Model.FormFieldName}={Model.ValueSelector(filter)}", string.Empty)
                .Replace("?&", "&")
                .Replace("&&", "&");
            <li>
                <a href="@Model.Path@query@Model.Fragment" class="app-filter__tag">
                    @Model.LabelSelector(filter)
                </a>
            </li>
        }
    </ul>
}