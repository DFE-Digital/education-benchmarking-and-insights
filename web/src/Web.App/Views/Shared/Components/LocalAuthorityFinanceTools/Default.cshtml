@model Web.App.ViewModels.Components.FinanceToolsViewModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-m">Finance tools</h2>
        <ul class="app-links">
            @foreach (var tool in Model.Tools)
            {
                switch (tool)
                {
                    case FinanceTools.CompareYourCosts:
                        <li>
                            <h3 class="govuk-heading-s">
                                <a href="@Url.Action("Index", "LocalAuthorityComparison", new { code = Model.Identifier })" class="govuk-link govuk-link--no-visited-state">View school spending</a>
                            </h3>
                            <p class="govuk-body">
                                View the spending for the schools in this local authority.
                            </p>
                        </li>
                        break;
                    case FinanceTools.BenchmarkCensus:
                        <li>
                            <h3 class="govuk-heading-s">
                                <a href="@Url.Action("Index", "LocalAuthorityCensus", new { code = Model.Identifier })" class="govuk-link govuk-link--no-visited-state">View pupil and workforce data</a>
                            </h3>
                            <p class="govuk-body">
                                View pupil and workforce data for other schools in this local authority.
                            </p>
                        </li>
                        break;
                    case FinanceTools.HighNeeds:
                        <feature name="@FeatureFlags.HighNeeds">
                            <li>
                                <h3 class="govuk-heading-s">
                                    <a href="@Url.Action("Index", "LocalAuthorityHighNeeds", new
                                             {
                                                 code = Model.Identifier
                                             })" class="govuk-link govuk-link--no-visited-state">
                                        High needs benchmarking
                                    </a>
                                </h3>
                                <p class="govuk-body">
                                    Benchmark spending against statistical neighbours or other local authorities of your choice.
                                </p>
                            </li>
                        </feature>
                        break;
                }
            }
        </ul>
    </div>
</div>