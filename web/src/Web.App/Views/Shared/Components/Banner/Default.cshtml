@model Web.App.ViewModels.Components.BannerViewModel 

<div class="govuk-full-width-container">
    <div class="govuk-phase-banner">
        <p class="govuk-phase-banner__content">
            <strong class="govuk-tag govuk-phase-banner__content__tag">
                Beta
            </strong>
            <span class="govuk-phase-banner__text">
                This is a new service – your <a class="govuk-link" href="#">feedback</a> will help us to improve it.
            </span>
        </p>
    </div>
    <div class="govuk-phase-banner">
        <p class="govuk-phase-banner__content app-login-banner">
            <strong>@Model.Organisation</strong>
            <span class="app-float-right">
                @if (User.Identity is { IsAuthenticated: true })
                {
                    @Html.ActionLink("Sign out", "Signout", "Account", null, new { @class = "govuk-link govuk-link--no-visited-state" })
                }
                else
                {
                    @Html.ActionLink("Sign in", "Signin", "Account", new{redirectUri = ViewContext.HttpContext.Request.Path }, new { @class = "govuk-link govuk-link--no-visited-state" })
                }
            </span>
        </p>
    </div>
</div> 
