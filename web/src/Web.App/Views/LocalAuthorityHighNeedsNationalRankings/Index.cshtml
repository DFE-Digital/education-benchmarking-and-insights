@model Web.App.ViewModels.LocalAuthorityHighNeedsViewModel
@{
    ViewData[ViewDataKeys.Title] = PageTitles.LocalAuthorityHighNeedsNationalRankings;
}

@await Component.InvokeAsync("EstablishmentHeading", new
{
    title = ViewData[ViewDataKeys.Title],
    name = Model.Name,
    id = Model.Code,
    kind = OrganisationTypes.LocalAuthority
})

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">
            Local authorities ranked based on:
        </p>
        <ul class="govuk-list govuk-list--bullet">
            <li>outturn compared to DSG high needs funding</li>
            <li>outturn compared to planned expenditure</li>
        </ul>
        <p class="govuk-body">
            These are shown as a percentage using @Model.Section251YearRange data.
        </p>
    </div>
</div>

<div id="la-national-rank" data-code="@Model.Code" data-title="@Model.ChartTitle" data-year="@Model.Section251Year"></div>