@model Web.App.ViewModels.SchoolCustomDataLandingViewModel
@{
    ViewData[ViewDataKeys.Title] = PageTitles.SchoolChangeDataRevert;
}

@await Component.InvokeAsync("EstablishmentHeading", new
{
    title = ViewData[ViewDataKeys.Title],
    name = Model.Name,
    id = Model.Urn,
    kind = OrganisationTypes.School
})

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">This will remove all the data you've customised yourself.</p>
        @using (Html.BeginForm("RevertCustomData", "SchoolCustomData", new
                {
                    urn = Model.Urn
                }, FormMethod.Post, true, new
                {
                    novalidate = "novalidate"
                }))
        {
            <div class="govuk-button-group">
                <button type="submit" class="govuk-button" data-module="govuk-button">
                    Remove custom data
                </button>
                <a class="govuk-link" href="@Url.Action("Index", "School", new { urn = Model.Urn })" id="cancel-revert">Cancel</a>
            </div>
        }
    </div>
</div>