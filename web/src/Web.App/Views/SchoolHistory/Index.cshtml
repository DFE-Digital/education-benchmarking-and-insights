@model Web.App.ViewModels.SchoolHistoryViewModel

@{
    ViewData[ViewDataKeys.Title] = PageTitles.HistoricData;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">@Model.Name</span>
        <h1 class="govuk-heading-l">@ViewData[ViewDataKeys.Title]</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">View data from previous financial years.</p>
        <p class="govuk-body">All data is from consistent financial reporting (CFR).</p>
    </div>
</div>

<div id="school-history"></div>

@await Component.InvokeAsync("SchoolFinanceTools", new { identifier = Model.Urn, tools = new[] { FinanceTools.FinancialPlanning, FinanceTools.BenchmarkWorkforce } })