@model Web.App.ViewModels.SchoolSeniorLeadershipViewModel

@if (string.IsNullOrWhiteSpace(Model.ChartSvg))
{
    <div
        class="govuk-warning-text govuk-!-margin-top-2 govuk-!-margin-bottom-4 ssr-chart-warning">
        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
        <strong class="govuk-warning-text__text">
            <span class="govuk-visually-hidden">Warning</span>
            Unable to display chart
        </strong>
    </div>
    return;
}

<div class="costs-chart-container" data-title="School Senior Leadership">
    <div class="costs-chart-wrapper">
        <div class="ssr-chart horizontal-bar-chart">
            @Html.Raw(Model.ChartSvg)
        </div>
    </div>
</div>