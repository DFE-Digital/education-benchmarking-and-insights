@using EducationBenchmarking.Web.ViewModels.Components
@model EducationBenchmarking.Web.ViewModels.SchoolWorkforceViewModel
@{
    ViewBag.Title = PageTitleConstants.SchoolWorkforce;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">@Model.Name</span>
        <h1 class="govuk-heading-l">Benchmark workforce data</h1>
    </div>
    <div class="govuk-grid-column-one-third">
        <p class="govuk-body">
            <a href="@Url.Action("Index", "FindOrganisation")" class="govuk-link govuk-link--no-visited-state">Change school</a>
        </p>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">Compare your workforce data against similar schools</p>
        <a href="@Url.Action("Index", "SchoolComparatorSet", new { urn = Model.Urn, referrer = Referrers.SchoolWorkforce})" role="button" class="govuk-button" data-module="govuk-button">
            View your comparator set
        </a>
    </div>
</div>

<div id="compare-workforce" data-urn="@Model.Urn" data-academy-year="@Model.AcademiesFinancePeriod" data-maintained-year="@Model.MaintainedSchoolsFinancePeriod"></div>

@await Component.InvokeAsync("FinanceTools", new {identifier = Model.Urn, tools = new [] {FinanceTools.AreasOfInvestigation, FinanceTools.FinancialPlanning, FinanceTools.CompareYourCosts}})