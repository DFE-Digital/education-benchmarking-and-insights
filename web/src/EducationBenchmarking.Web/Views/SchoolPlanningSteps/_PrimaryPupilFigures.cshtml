@using EducationBenchmarking.Web.Extensions
@model EducationBenchmarking.Web.ViewModels.SchoolPlanning.SchoolPlanPrimaryPupilFiguresViewModel

@if (Model is { MixedAgeReceptionYear1: false })
{
    <div class="@(ViewData.ModelState.HasError(nameof(Model.PupilsReception)) ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
        <label class="govuk-label govuk-label--m" for="@nameof(Model.PupilsReception)">
            Pupil figures for reception
        </label>
        @if (ViewData.ModelState.HasError(nameof(Model.PupilsReception)))
        {
            <p id="@nameof(Model.PupilsReception)-error" class="govuk-error-message">
                <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(Model.PupilsReception)]?.Errors.First().ErrorMessage
            </p>
        }
        <input class="@(ViewData.ModelState.HasError(nameof(Model.PupilsReception)) ? "govuk-input govuk-input--width-5 govuk-input--error" : "govuk-input govuk-input--width-5")"
               id="@nameof(Model.PupilsReception)"
               name="@nameof(Model.PupilsReception)"
               type="number"
               spellcheck="false"
               value="@Model.PupilsReception">
    </div>
}

