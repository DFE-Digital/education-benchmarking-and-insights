@using EducationBenchmarking.Web.Extensions
@model EducationBenchmarking.Web.ViewModels.SchoolPlanViewModel
@{
    ViewData[ViewDataConstants.Title] = PageTitleConstants.SchoolPlanningTotalTeacherCosts;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @using (Html.BeginForm("TotalTeacherCosts", "SchoolPlanningSteps", new { urn = Model.Urn, year = Model.Year }, FormMethod.Post, true, new { novalidate = "novalidate" }))
        {
            <div class="@(ViewData.ModelState.HasError(nameof(Model.TotalTeacherCosts)) ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
                <span class="govuk-caption-l">@Model.Name</span>
                <h1 class="govuk-label-wrapper">
                    <label class="govuk-label govuk-label--l" for="total-teacher">
                        @ViewData[ViewDataConstants.Title]
                    </label>
                </h1>
                @if (ViewData.ModelState.HasError(nameof(Model.TotalTeacherCosts)))
                {
                    <p id="total-teacher-error" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(Model.TotalTeacherCosts)]?.Errors.First().ErrorMessage
                    </p>
                }
                <div class="govuk-input__wrapper">
                    <div class="govuk-input__prefix" aria-hidden="true">Â£</div>
                    <input class="@(ViewData.ModelState.HasError(nameof(Model.TotalTeacherCosts)) ? "govuk-input govuk-input--width-10 govuk-input--error" : "govuk-input govuk-input--width-10")"
                           id="total-teacher" 
                           name="@nameof(Model.TotalTeacherCosts)" 
                           type="number" 
                           spellcheck="false" 
                           value="@Model.TotalTeacherCosts">
                </div>
            </div>
            <div>
                <button type="submit" class="govuk-button" data-module="govuk-button">
                    Continue
                </button>
            </div>
        }
    </div>
</div>