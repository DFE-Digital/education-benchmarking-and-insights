@using EducationBenchmarking.Web.Extensions
@model EducationBenchmarking.Web.ViewModels.SchoolPlanning.SchoolPlanPupilFiguresViewModel
@{
    ViewData[ViewDataKeys.Title] = PageTitles.SchoolPlanningPupilFigures;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @using (Html.BeginForm("PupilFigures", "SchoolPlanningSteps", new { urn = Model.Urn, year = Model.Year }, FormMethod.Post, true, new { novalidate = "novalidate" }))
        {
            <div class="@(ViewData.ModelState.HasError("PupilFigures") ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <span class="govuk-caption-l">@Model.Name</span>
                        <h1 class="govuk-fieldset__heading">
                            @ViewData[ViewDataKeys.Title]
                        </h1>
                    </legend>
                    <div class="govuk-inset-text">
                        <p class="govuk-body">
                            Changing the figures here will not change the data already submitted as part of your school census.
                        </p>
                    </div>
                    @if (ViewData.ModelState.HasError("PupilFigures"))
                    {
                        <p id="pupil-figures-error" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState["PupilFigures"]?.Errors.First().ErrorMessage
                        </p>
                    }
                    <div class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear7)) ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
                        <label class="govuk-label govuk-label--m" for="@nameof(Model.PupilsYear7)">
                            Pupil figures for year 7
                        </label>
                        @if (ViewData.ModelState.HasError(nameof(Model.PupilsYear7)))
                        {
                            <p id="year-7-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(Model.PupilsYear7)]?.Errors.First().ErrorMessage
                            </p>
                        }
                        <input class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear7)) ? "govuk-input govuk-input--width-5 govuk-input--error" : "govuk-input govuk-input--width-5")"
                               id="@nameof(Model.PupilsYear7)"
                               name="@nameof(Model.PupilsYear7)"
                               type="number"
                               spellcheck="false"
                               value="@Model.PupilsYear7">
                    </div>

                    <div class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear8)) ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
                        <label class="govuk-label govuk-label--m" for="@nameof(Model.PupilsYear8)">
                            Pupil figures for year 8
                        </label>
                        @if (ViewData.ModelState.HasError(nameof(Model.PupilsYear8)))
                        {
                            <p id="year-8-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(Model.PupilsYear8)]?.Errors.First().ErrorMessage
                            </p>
                        }
                        <input class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear8)) ? "govuk-input govuk-input--width-5 govuk-input--error" : "govuk-input govuk-input--width-5")"
                               id="@nameof(Model.PupilsYear8)"
                               name="@nameof(Model.PupilsYear8)"
                               type="number"
                               spellcheck="false"
                               value="@Model.PupilsYear8">
                    </div>

                    <div class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear9)) ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
                        <label class="govuk-label govuk-label--m" for="@nameof(Model.PupilsYear9)">
                            Pupil figures for year 9
                        </label>
                        @if (ViewData.ModelState.HasError(nameof(Model.PupilsYear9)))
                        {
                            <p id="year-9-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(Model.PupilsYear9)]?.Errors.First().ErrorMessage
                            </p>
                        }
                        <input class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear9)) ? "govuk-input govuk-input--width-5 govuk-input--error" : "govuk-input govuk-input--width-5")"
                               id="@nameof(Model.PupilsYear9)"
                               name="@nameof(Model.PupilsYear9)"
                               type="number"
                               spellcheck="false"
                               value="@Model.PupilsYear9">
                    </div>

                    <div class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear10)) ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
                        <label class="govuk-label govuk-label--m" for="@nameof(Model.PupilsYear10)">
                            Pupil figures for year 10
                        </label>
                        @if (ViewData.ModelState.HasError(nameof(Model.PupilsYear10)))
                        {
                            <p id="year-10-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(Model.PupilsYear10)]?.Errors.First().ErrorMessage
                            </p>
                        }
                        <input class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear10)) ? "govuk-input govuk-input--width-5 govuk-input--error" : "govuk-input govuk-input--width-5")"
                               id="@nameof(Model.PupilsYear10)"
                               name="@nameof(Model.PupilsYear10)"
                               type="number"
                               spellcheck="false"
                               value="@Model.PupilsYear10">
                    </div>

                    <div class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear11)) ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
                        <label class="govuk-label govuk-label--m" for="@nameof(Model.PupilsYear11)">
                            Pupil figures for year 11
                        </label>
                        @if (ViewData.ModelState.HasError(nameof(Model.PupilsYear11)))
                        {
                            <p id="year-11-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(Model.PupilsYear11)]?.Errors.First().ErrorMessage
                            </p>
                        }
                        <input class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear11)) ? "govuk-input govuk-input--width-5 govuk-input--error" : "govuk-input govuk-input--width-5")"
                               id="@nameof(Model.PupilsYear11)"
                               name="@nameof(Model.PupilsYear11)"
                               type="number"
                               spellcheck="false"
                               value="@Model.PupilsYear11">
                    </div>

                    @if (Model.HasSixthForm)
                    {
                        <div class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear12)) ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
                            <label class="govuk-label govuk-label--m" for="@nameof(Model.PupilsYear12)">
                                Full-time equivalent pupil figures for year 12
                            </label>
                            @if (ViewData.ModelState.HasError(nameof(Model.PupilsYear12)))
                            {
                                <p id="year-12-error" class="govuk-error-message">
                                    <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(Model.PupilsYear12)]?.Errors.First().ErrorMessage
                                </p>
                            }
                            <input class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear12)) ? "govuk-input govuk-input--width-5 govuk-input--error" : "govuk-input govuk-input--width-5")"
                                   id="@nameof(Model.PupilsYear12)"
                                   name="@nameof(Model.PupilsYear12)"
                                   type="number"
                                   spellcheck="false"
                                   value="@Model.PupilsYear12">
                        </div>

                        <div class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear13)) ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
                            <label class="govuk-label govuk-label--m" for="@nameof(Model.PupilsYear13)">
                                Full-time equivalent pupil figures for year 13
                            </label>
                            @if (ViewData.ModelState.HasError(nameof(Model.PupilsYear13)))
                            {
                                <p id="year-13-error" class="govuk-error-message">
                                    <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(Model.PupilsYear13)]?.Errors.First().ErrorMessage
                                </p>
                            }
                            <input class="@(ViewData.ModelState.HasError(nameof(Model.PupilsYear13)) ? "govuk-input govuk-input--width-5 govuk-input--error" : "govuk-input govuk-input--width-5")"
                                   id="@nameof(Model.PupilsYear13)"
                                   name="@nameof(Model.PupilsYear13)"
                                   type="number"
                                   spellcheck="false"
                                   value="@Model.PupilsYear13">
                        </div>
                    }
                </fieldset>
            </div>
            <button type="submit" class="govuk-button" data-module="govuk-button">
                Continue
            </button>
        }
    </div>
</div>