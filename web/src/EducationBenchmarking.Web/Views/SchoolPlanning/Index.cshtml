@model EducationBenchmarking.Web.ViewModels.SchoolPlanningViewModel
@{
    ViewBag.Title = PageTitles.SchoolPlanning;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">@ViewBag.Title</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-heading-m">@Model.Name</h2>

        <p class="govuk-body-l">ICFP is a management process that helps schools to plan and adjust their curriculum and budget.</p>

        <p class="govuk-body">
            <!-- TODO amend href once next page is created-->
            <a href="@Url.Action("Index", "SchoolPlanning", new { urn = Model.Urn })" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button" id="financial-planning-continue">
                Continue
            </a>
        </p>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body govuk-!-font-weight-bold">Before you start</p>

        <p class="govuk-body">Completing a deployment plan will take about 10 minutes</p>

        <p class="govuk-body ">A full list of the data will be asked to input <a href="@Url.Action("Help", "SchoolPlanning", new { urn = Model.Urn })" id="financial-planning-help" class="govuk-link">can be found here</a>.</p>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-m">More tools</h2>
        <ul class="app-links">
            <li>@await Component.InvokeAsync("CompareYourCosts", Model.Urn)</li>
            <li>@await Component.InvokeAsync("ViewYourAreasForInvestigation", Model.Urn)</li>
            <li>@await Component.InvokeAsync("BenchmarkWorkforce", Model.Urn)</li>
        </ul>
    </div>
</div>