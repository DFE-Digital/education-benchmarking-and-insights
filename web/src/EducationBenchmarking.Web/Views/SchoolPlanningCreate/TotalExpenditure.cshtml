@using EducationBenchmarking.Web.Extensions
@model EducationBenchmarking.Web.ViewModels.SchoolPlanCreateViewModel
@{
    ViewData[ViewDataKeys.Title] = PageTitles.SchoolPlanningTotalExpenditure;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @using (Html.BeginForm("TotalExpenditure", "SchoolPlanningCreate", new { urn = Model.School.Urn, year = Model.Plan?.Year }, FormMethod.Post, true, new { novalidate = "novalidate" }))
        {
            <div class="@(ViewData.ModelState.HasError(nameof(Model.Plan.TotalExpenditure)) ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
                <span class="govuk-caption-l">@Model.School.Name</span>
                <h1 class="govuk-label-wrapper">
                    <label class="govuk-label govuk-label--l" for="@nameof(Model.Plan.TotalExpenditure)">
                        @ViewData[ViewDataKeys.Title]
                    </label>
                </h1>
                @if (ViewData.ModelState.HasError(nameof(Model.Plan.TotalExpenditure)))
                {
                    <p id="@nameof(Model.Plan.TotalExpenditure)-error" class="govuk-error-message">
                        <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(Model.Plan.TotalExpenditure)]?.Errors.First().ErrorMessage
                    </p>
                }
                <div class="govuk-input__wrapper">
                    <div class="govuk-input__prefix" aria-hidden="true">Â£</div>
                    <input class="@(ViewData.ModelState.HasError(nameof(Model.Plan.TotalExpenditure)) ? "govuk-input govuk-input--width-10 govuk-input--error" : "govuk-input govuk-input--width-10")" 
                           id="@nameof(Model.Plan.TotalExpenditure)" 
                           name="@nameof(Model.Plan.TotalExpenditure)" 
                           type="number" 
                           spellcheck="false" 
                           value="@Model.Plan?.TotalExpenditure">
                </div>
            </div>
            <div>
                <button type="submit" class="govuk-button" data-module="govuk-button">
                    Continue
                </button>
            </div>
        }
    </div>
</div>