@if (Model.PupilsNursery is > 0)
{
    <input type="hidden" name="@nameof(Model.PupilsNursery)" value="@Model.PupilsNursery"/>
    
    <div class="@(ViewData.ModelState.HasError(nameof(Model.TeachersNursery)) ? "govuk-form-group govuk-form-group--error" : "govuk-form-group")">
        <label class="govuk-label govuk-label--m" for="@nameof(Model.TeachersNursery)">
            Teacher period allocation figures from nursery
        </label>
        @if (ViewData.ModelState.HasError(nameof(Model.TeachersNursery)))
