            <p id="@nameof(Model.TeachersNursery)-error" class="govuk-error-message">
                <span class="govuk-visually-hidden">Error:</span> @ViewData.ModelState[nameof(Model.TeachersNursery)]?.Errors.First().ErrorMessage
            </p>
        }
        <input class="@(ViewData.ModelState.HasError(nameof(Model.TeachersNursery)) ? "govuk-input govuk-input--width-5 govuk-input--error" : "govuk-input govuk-input--width-5")"
               id="@nameof(Model.TeachersNursery)"
               name="@nameof(Model.TeachersNursery)"
               type="number"
               spellcheck="false"
               value="@Model.TeachersNursery">
    </div>
}

