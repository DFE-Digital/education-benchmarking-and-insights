{
  "name": "shutter",
  "version": "0.0.0",
  "main": "dist/src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "gts lint",
    "clean": "gts clean",
    "clean-modules": "shx rm -rf node_modules",
    "compile": "tsc",
    "fix": "gts fix",
    "assets": "shx mkdir -p src/assets && shx cp -r node_modules/govuk-frontend/dist/govuk/assets src && shx mkdir -p src/assets/rebrand/styles && shx cp node_modules/govuk-frontend/dist/govuk/govuk-frontend.min.css* src/assets/rebrand/styles && shx cp -r src/assetSrc/images src/assets && shx cp -r src/assetSrc/fonts src/assets",
    "build": "npm run clean && npm run compile && npm run assets && npm run sass:build && shx cp -r src/views dist/src/views && shx cp -r src/assets dist/src/assets",
    "start": "node --require ./dist/src/instrumentation.js dist/src/index.js",
    "start:dev": "dotenvx run -- nodemon --require ./src/instrumentation.ts src/index.ts",
    "dev": "npm run assets && npm-run-all --parallel sass:watch start:dev",
    "sass:build": "sass src/assetSrc/scss/main.scss src/assets/styles/main.css --style=compressed",
    "sass:watch": "sass src/assetSrc/scss/main.scss src/assets/styles/main.css --watch"
  },
  "dependencies": {
    "@azure/monitor-opentelemetry-exporter": "^1.0.0-beta.32",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/resources": "^2.5.0",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@opentelemetry/sdk-trace-node": "^2.5.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@opentelemetry/winston-transport": "^0.14.1",
    "express": "^5.1.0",
    "govuk-frontend": "^6.0.0",
    "isomorphic-dompurify": "^2.35.0",
    "marked": "^17.0.1",
    "nunjucks": "^3.2.4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.4",
    "@types/express": "^5.0.5",
    "@types/node": "^25.2.3",
    "@types/nunjucks": "^3.2.6",
    "@types/trusted-types": "^2.0.7",
    "gts": "^6.0.2",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "sass": "^1.94.2",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "openai": "^6.8.1"
  },
  "engines": {
    "node": ">=22.15.0"
  },
  "overrides": {
    "tmp" : "^0.2.4"
  }
}